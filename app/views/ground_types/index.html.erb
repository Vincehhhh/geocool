    <% @ground_types.each do |ground| %>
      <%= f.collection_radio_buttons :name, label: ground.name %>
      <%= f.input :name, as: :radio_buttons, label: ground.name %>
    <% end %>
    <%= f.submit  "Suivant", class:"btn d-flex" %>
  <% end %>
</div>

