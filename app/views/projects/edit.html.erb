<div class="container">

  <%= render "shared/progress_bar/step3_progress_bar" %>

  <div class="flex-container">

    <div class="main-card-form justify-content-center card-project">
        <p class="text-center">En fonction des régions et de leur histoire géologique, les sols ont des natures très différentes. </p>
        <%= simple_form_for @project do |f| %>
          <div class="ground-container">
            <% @ground_types.each do |ground| %>
              <label class="ground d-flex">
                <%= f.radio_button :ground_type_id, ground.id, id: "ground_type_#{ground.id}", class: "ground-selector" %>
                <div class="ground-img">
                  <%= cl_image_tag ground.photo.key, width: 150 %>
                </div>
                <div class="ground-infos">
                  <p>Conductivité thermique</p>
                  <strong><%= ground.lambda_ground%>/m.K</strong>
                  <p>Masse volumique</p>
                  <strong><%= ground.density%>/m3</strong>
                  <p>Capacité thermique</p>
                  <strong><%= ground.heat_capacity%>/kg.K</strong>
                </div>
              </label>
            <% end %>
          </div>
          <div>
            <%= f.submit "", class:"btn d-flex btn-next" %>
            <svg width="23" height="20" viewBox="0 0 23 20" fill="none" xmlns="http://www.w3.org/2000/svg" class="arrow-btn-next">
              <path d="M21.1794 9.98686L1.69227 9.98686M21.1794 9.98686L12.8278 18.2632M21.1794 9.98686L12.8278 1.71054" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <p class="btn-next-text-bottom">Suivant</p>
            </div>
        <% end %>

    </div>

  </div>

</div>
