
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid navbar-container" >
    <%= link_to "/", class: "navbar-brand brand" do %> GeoCool
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">

        <li class="nav-item active">
          <%= link_to "Le guide", guides_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Les fabricants", manufacturers_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Mes projets",  projects_path, class: "nav-link" %>
        </li>

        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle avatar-navbar", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Mon compte", "#", class: "dropdown-item" %>
              <%= link_to "Mes projets", projects_path, class: "dropdown-item" %>
